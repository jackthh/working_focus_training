<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/icon_margin_5dp"
    android:layout_marginLeft="@dimen/icon_margin_5dp">
    <ImageView
        android:id="@+id/item_sound_image"
        android:layout_width="@dimen/icon_size_36dp"
        android:layout_height="@dimen/icon_size_36dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/icon_margin_10dp"
        android:layout_marginRight="@dimen/icon_margin_10dp"
        android:layout_marginBottom="@dimen/icon_margin_10dp"
        android:src="@drawable/ic_sound_drizzle"
        android:clickable="true"/>
    <TextView
        android:id="@+id/item_sound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_sound_image"
        android:layout_centerHorizontal="true"
        android:text="Tittle"
        android:textColor="@color/white"
        android:textSize="@dimen/icon_text_size_10dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>
</RelativeLayout>